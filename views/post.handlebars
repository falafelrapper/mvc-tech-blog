{{!-- post page --}}

<div class="post-window">
     <div class="post-card">
        <div>
            <div class="card-header">
                <h3 id="post-name">{{name}}</h3>
                <p id="post-user">Created by <a href="/users/{{user.id}}">{{user.name}}</a></p>
            </div>

            <p id="post-text">
                {{description}}
            </p>
        </div>
    </div>
    {{#each comments}}
    <div class="post-card">
        <div>
            <p id="post-text">
                {{comment}}
            </p>
        </div>
    </div>
    {{/each}}
</div>
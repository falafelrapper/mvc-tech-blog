{{!-- Individulal user handle bars --}}
{{!-- Will display all recipes associated with that user and links to the individual recipes --}}
<div class="post-window">
    <h2 class="userHeader">{{name}}'s Profile</h2>
    {{#each posts}}
   <div class="post-card">
        <div>
            <div class="card-header">
                <h3 id="post-name"><a href="/posts/{{id}}">{{name}}</a></h3>
                <p id="post-user">Created by <a href="/users/{{user.id}}">{{user.name}}</a></p>
            </div>

            <p>
                {{description}}
            </p>
        </div>
    </div>
    {{/each}}

</div>